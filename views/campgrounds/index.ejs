    <ul id="straight-ul">
        <%for (let campground of campgrounds){%>
<div class="card mb-3 bg-dark text-light">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=campground.images[0].url%>">
        </div>
        <div class="col-md-8 ">
            <div class="card-body ">
                <h5 class="card-title text-title"><%=campground.title%></h5>
                <p class="card-text text-standard"><%=campground.description%></p>
                <p class="card-text">
                    <small class="text-standard"><%=campground.location%></small>
                </p>
                <a class="btn btn-new text-title" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
                <!-- <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                    </form> -->
            </div>
        </div>
    </div>
</div> 

