<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-conent-center align-items-center my-5">
    <div class="row bg-dark col-sm-12 mx-auto col-md-6 col-xl-4 offset-xl-4 offset-sm-3 offset-md-3 card shadow">
        <!-- <img class="card-img-top" src="images/campgrounds-bg-photo-0.jpg" alt=""> -->
        <div class="card-body"> 
            <h5 class="card-title">Register</h5>
            <form action="/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control bg-lighty" type="text" id="username" name="username" autofocus required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control bg-lighty" type="email" id="email" name="email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control bg-lighty" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="d-grid">
                    <button class="btn btn-new gap-0 mb-3">Register</button>
                </div>
            </form>
        </div>   
</div>
</div>

